<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="co.edu.ucc.estasucediendo.tips"
    tools:showIn="@layout/activity_tips">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="Líneas de emergencia Santa Marta"
            android:textAlignment="center"
            android:textColor="@color/Dark"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="Bomberos"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <Button
                android:id="@+id/llamar_bomberos"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:drawableLeft="@mipmap/phone"
                android:text="119"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="Cruz Roja"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <Button
                android:id="@+id/llamar_cruzroja"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:drawableLeft="@mipmap/phone"
                android:text="132"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="CRUE"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <Button
                android:id="@+id/llamar_crue"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:drawableLeft="@mipmap/phone"
                android:text="(035) 4209632"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="Defensa Civil"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <Button
                android:id="@+id/llamar_defensacivil"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:drawableLeft="@mipmap/phone"
                android:text="144"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.00"
                android:text="Policía"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                android:textStyle="normal|bold|italic" />

            <Button
                android:id="@+id/llamar_policia"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:drawableLeft="@mipmap/phone"
                android:text="123"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="Tips Durante Una Emergencia"
                android:textAlignment="center"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="24sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textViewNombreTipoEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="5dp"
                android:text="Sismo"
                android:textAlignment="center"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/textViewCuerpoTips"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/textViewNombreTipoEvento"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="• Participa en los simulacros ante sismos.\n• Identifica zonas seguras y punto de encuentro con tu familia. \n• Ten listo un kit de emergencia. \n• Durante un sismo ubícate en los sitios seguros. Agáchate, cúbrete y sujétate. \n• Antes de evacuar cierra registros de agua, energía y gas. \n• Permanece atento a posibles réplicas."
                android:textAlignment="textStart"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                android:textStyle="normal|italic" />
        </LinearLayout>

    </ScrollView>
</LinearLayout>
